<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{url_for('static', filename='main.css')}}">
    <title>Pokemon</title>
  </head>

  <body>
    <div class="container">
        <h3>Use the searchbar below to find the stats of your favorite Pokemon!</h3>
        <form method="POST" action="{{url_for('search')}}">
            <div>
            {{ form.pokemon_name.label(class="form-label") }}
            {{ form.pokemon_name(class="form-control") }}
            </div>
            <br/>
            <div>
            {{ form.submit(class="btn btn-primary form-control") }}
            </div>
        </form>
        <br/>
        {% if stats %}
        <table class="table">
        <thead>
            <tr>
              <th scope="col">Pokemon</th>
              <th scope="col">Base HP</th>
              <th scope="col">Base Defence</th>
              <th scope="col">Base Attack</th>
              <th scope="col">Front Shiny</th>
            </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">{{stats["name"]}}</th>
            <td>{{stats["hp"]}}</td>
            <td>{{stats["defense"]}}</td>
            <td>{{stats["attack"]}}</td>
            <td><img src="{{stats['shiny']}}" height=100 width=100></td>
          </tr>
        </tbody>
        </table>
        {% endif %}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>